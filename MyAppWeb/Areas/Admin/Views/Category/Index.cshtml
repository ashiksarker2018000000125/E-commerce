@model MyApp.Models.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Category";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6 text-primary">
            <h2>Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a  class="btn btn-info" asp-controller="Category" asp-action="CreateUpdate"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
        </div>

    </div>

</div>

<table class="table table-bordered table-striped " style="width:100%;">
    <thead>
        <tr>
            <th>Category Name </th>
            <th>Display Order</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.categories){
        <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td class="text-center">
                <a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-pencil-square"></i>  Edit</a> &nbsp;
                <a  asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" type="submit" class="btn btn-danger "><i class="bi bi-trash"></i>  Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

